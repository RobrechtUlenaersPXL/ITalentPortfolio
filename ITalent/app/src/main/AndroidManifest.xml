<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="be.pxl.robrecht.rideshare">
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/car_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/car_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.RideShare">
        <activity
            android:name=".SettingsMenuActivity"
            android:exported="true" />
        <activity
            android:name=".RideDetailActivity"
            android:exported="true" />
        <activity
            android:name=".RidesListActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>